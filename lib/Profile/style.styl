.Members__profiles
  display flex
  justify-content space-around
  flex-wrap wrap

.Member
  text-align center
  &__image
    width 125px
    height 125px
    margin 0 1em
    &--photo
      border-radius 50%
      width 100%
      height 100%
  &__name
    font-weight normal
    margin 0
    &--link
      color black
  &__job
    margin 0.5em 0
    color #545454
