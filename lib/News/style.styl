.News__slider
  margin 0 auto
  width 100%

.Slider
  list-style-type none
  position relative
  margin 0
  padding 0
  height 300px
  width 100%
  overflow hidden
  &__controls
    list-style-type none
    text-align center
    padding 0
    margin-top 1em

.Slide
  display none
  &__image
    position absolute
    top 0
    left 0
    width 100%
    height auto
  &__caption
    position absolute
    bottom 0
    left 0
    width 100%
    height 100%
    background rgba(black, 0.6)
    padding 1em
    box-sizing border-box
    text-align center
  &__title
    color #229fe6
    font-weight bold
    margin 0
  &__description
    margin 0
    color white
    padding-top 1em
  &__indicator
    background #415066
    border-radius 50%
    display inline-block
    height 12px
    width 12px
    margin 0 4px
    cursor pointer
    &.active
      background #229fe6

.Slide-current
  display block

@media screen and (min-width: 700px)
  .Slide
    &__caption
      transform translateY(100%)
      transition all 0.3s ease
      height auto
      text-align left
    &:hover .Slide__caption
      transform translateY(0%)
