@import "normalize.styl"
@import "Profile/style.styl"
@import "Contact/style.styl"

.Header
  color white
  display block
  text-align center
  background black
  &__logo
    margin 0 auto
    width 100%
    height auto
    &--image
      width 100%
      background rgba(white, 0.1)
    &--text
      font-size 1.3em
      display none

#Menu-btn
  color white
  text-decoration none

.Nav__menu
  text-align center
  background black

.Menu
  display none
  margin 0.5em 0
  padding 0
  background black
  &__item
    list-style none
    border-bottom 1px #525252 solid
    &--link
      color white
      padding 0.3em 0
      display block
      text-decoration none
      &:hover
        background rgba(#229fe6, 0.7)

.Members
  margin-bottom 1em

.Info
.Projects
.Events
.Members
.Contact
  &__title
    text-align center

@media screen and (min-width: 700px)
  .Header
    overflow hidden
    &__logo
      margin 0.5em
      display flex
      justify-content center
      &--image
        width 300px
        height 80px
      &--text
        display flex
        align-items center
        padding 0 0.5em

  #Menu-btn
    display none

  .Menu
    display flex
    justify-content space-around
    margin 0
    &__item
      display block
      margin 0
      width 100%
