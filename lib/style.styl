@import "nib"
@import "normalize.styl"
@import "fonts/style.styl"
@import "Profile/style.styl"
@import "Contact/style.styl"

html
  font-family: 'Lato', sans-serif

.Header
  color white
  display block
  text-align center
  background black
  &__logo
    margin 0 auto
    width 100%
    height auto
    &--image
      width 320px
      background rgba(white, 0.1)
    &--text
      font-size 1.3em
      display none

#Menu-btn
  color white
  cursor pointer
  font-size 1.3em

.Menu
  text-align center
  background black
  & input
    display none
  & input:checked ~ .Menu__list
    height 148px
  &__list
    margin 0.5em 0
    padding 0
    background black
    height 0
    overflow hidden
    transition height 0.3s ease-in-out
  &__item
    list-style none
    border-bottom 1px #525252 solid
    &--link
      color white
      padding 0.3em 0
      display block
      text-decoration none
      &:hover
        background rgba(#229fe6, 0.7)

.Members
  max-width 1000px
  margin 1em auto

.Info
.Projects
.Events
.Members
.Contact
  &__title
    text-align center

@media screen and (min-width: 700px)
  .Header
    overflow hidden
    &__logo
      margin 0.5em 0
      display flex
      justify-content space-around
      height 80px
      &--image
        width 300px
      &--text
        display flex
        padding 0 0.5em
        align-items center

  .Menu
    &__list
      height auto
      margin 0
    &__item
      display inline-block
      &--link
        display block
        padding 1em

  #Menu-btn
    display none
